<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

        <TextView
            android:id="@+id/tv_date_today"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="0dp"
            android:text="15"/>


        <TextView
            android:id="@+id/tv_month_today"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="15dp"
            android:text="4月"
            android:layout_below="@id/tv_date_today"/>

        <Button
            android:id="@+id/bt_tom"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/white"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="94dp"
            android:text="》"
            android:layout_marginTop="16dp"
            />
        <Button
            android:id="@+id/bt_yest"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="94dp"
            android:layout_marginTop="16dp"
            android:text="《"
            android:background="@color/white" />
        <Button
            android:id="@+id/bt_home"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="16dp"
            android:text=""
            android:background="#C8CBCB" />
        <Button
            android:id="@+id/bt_settings"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="16dp"
            android:text=""
            android:background="#C8CBCB" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="72dp"
        android:background="#A7A9A9"/>

    <!-- 早上-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <View
            android:layout_width="150dp"
            android:layout_height="2dp"
            android:layout_marginRight="20dp"
            android:background="#A7A9A9"/>
        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="#A0A0A0"
            android:text="早"
            android:textColor="@color/white"/>

        <View
            android:layout_width="150dp"
            android:layout_height="2dp"
            android:layout_marginLeft="20dp"
            android:background="#A7A9A9"/>
    </LinearLayout>

    <!-- 下午-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <View
            android:layout_width="150dp"
            android:layout_height="2dp"
            android:layout_marginRight="20dp"
            android:background="#A7A9A9"/>
        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="#A0A0A0"
            android:text="午"
            android:textColor="@color/white"/>

        <View
            android:layout_width="150dp"
            android:layout_height="2dp"
            android:layout_marginLeft="20dp"
            android:background="#A7A9A9"/>
    </LinearLayout>

    <!-- 晚上-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="500dp"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <View
            android:layout_width="150dp"
            android:layout_height="2dp"
            android:layout_marginRight="20dp"
            android:background="#A7A9A9"/>
        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="#A0A0A0"
            android:text="晚"
            android:textColor="@color/white"/>

        <View
            android:layout_width="150dp"
            android:layout_height="2dp"
            android:layout_marginLeft="20dp"
            android:background="#A7A9A9"/>
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="35dp"
        android:background="#A7A9A9"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        >
        <TextView
            android:gravity="center"
            android:layout_width="0sp"
            android:layout_height="20dp"
            android:text="请输入内容"
            android:layout_weight="5"
            android:textColor="#EDEDED"
            android:background="#7A7A7A"
            android:layout_marginLeft="10dp"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="0.5"/>

        <Button
            android:layout_width="0sp"
            android:layout_weight="2"
            android:layout_height="20dp"
            android:background="#61b4f8"
            android:text="语音"
            android:textColor="@color/white"
            android:layout_marginRight="10dp"
/>
    </LinearLayout>







</RelativeLayout>